{
  "compilerOptions": {
    "module": "ESNext", // Use ES module syntax
    "target": "ESNext", // Use the latest JavaScript features
    "moduleResolution": "Node", // Resolve modules using Node.js style
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "allowImportingTsExtensions": true, // Allow importing TypeScript files with their extensions
    "noEmit": true // Do not emit output (only type check)
  },
  "include": [
    "src/**/*", // Include all TypeScript files in src
    "test" // Include the test folder
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "**/*.spec.ts" // Exclude spec files
  ]
}
